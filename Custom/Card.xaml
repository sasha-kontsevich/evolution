<UserControl x:Class="evolution.Custom.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:evolution.Custom"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="215">
    <Grid x:Name="card" Height="300" Width="215">
        <Rectangle Fill="White" Opacity="0.5">
            <Rectangle.Effect>
                <DropShadowEffect BlurRadius="16" ShadowDepth="6" Direction="315" Color="#000"></DropShadowEffect>
            </Rectangle.Effect>
        </Rectangle>
        <Image x:Name="cardImage" Stretch="UniformToFill"></Image>
        <Button x:Name="button" Background="#fff"></Button>
    </Grid>
</UserControl>
