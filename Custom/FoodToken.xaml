<UserControl x:Class="evolution.Custom.FoodToken"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:evolution.Custom"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="64">
    <Grid  Width="64" Height="64">
        <Ellipse VerticalAlignment="Center" HorizontalAlignment="Center" Width="58" Height="58" Fill="#000">
            <Ellipse.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="5" Direction="315" Opacity="0.8"></DropShadowEffect>
            </Ellipse.Effect>
                 </Ellipse>
        <Image x:Name="image" Width="60" Height="60" Stretch="Fill"></Image>
    </Grid>
</UserControl>
